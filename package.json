{
  "private": true,
  "name": "honeyware",
  "description": "My fabulous Nuxt.js project",
  "author": "Jeff <rustyangel@gmail.com>",
  "version": "1.0.0",
  "scripts": {
    "build": "nuxt build",
    "deploy": "np && release && npm run generate && now dist/ -p --name polychroma && now alias",
    "dev": "nuxt",
    "generate": "nuxt generate",
    "lint": "prettier-eslint '**/*.{js,vue}' --list-different --ignore '{dist,.nuxt}/**'",
    "lint:styles": "stylelint '**/*.{css,vue}' --ip '{.nuxt,dist}/**'",
    "start": "nuxt start",
    "test": "ava"
  },
  "dependencies": {
    "@nuxtjs/pwa": "3.0.0-beta.14",
    "cross-env": "5.2.0",
    "localforage": "1.7.3",
    "localforage-startswith": "1.4.0",
    "lodash.find": "4.6.0",
    "nuxt": "2.4.0"
  },
  "devDependencies": {
    "@vue/test-utils": "1.0.0-beta.27",
    "@zazen/eslint-config": "1.0.x",
    "@zazen/stylelint-config": "1.0.x",
    "ava": "1.0.x",
    "babel-eslint": "10.0.x",
    "browser-env": "3.2.x",
    "eslint": "5.15.x",
    "eslint-loader": "2.1.x",
    "eslint-plugin-nuxt": "0.4.x",
    "eslint-plugin-vue": "5.2.x",
    "husky": "1.3.x",
    "lint-staged": "8.1.x",
    "nodemon": "1.18.x",
    "require-extension-hooks": "0.3.x",
    "require-extension-hooks-babel": "0.1.x",
    "require-extension-hooks-vue": "2.0.x",
    "stylelint": "10.0.x"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,vue}": [
      "prettier-eslint --write",
      "git add"
    ],
    "*.{css,vue}": [
      "stylelint --fix",
      "git add"
    ]
  },
  "prettier": {
    "arrowParens": "always",
    "htmlWhitespaceSensitivity": "ignore",
    "proseWrap": "never",
    "semi": false,
    "singleQuote": true,
    "tabWidth": 4,
    "trailingComma": "all"
  }
}
